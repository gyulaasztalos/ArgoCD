{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 5am every weekday",
    "before 9am every weekday",
    "every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "description": "Causes the bot to create a PR (and thus, an email notification), whenever there is a new Renovate version",
      "matchPaths": ["renovate-update-notification/Dockerfile"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "argocd": {
    "managerFilePatterns": ["/application\\.yaml$/"]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  }
}
