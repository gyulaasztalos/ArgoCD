{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "after 5am every weekday",
    "before 4pm every weekday",
    "every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "description": "Causes the bot to create a PR (and thus, an email notification), whenever there is a new Renovate version",
      "matchFileNames": [
        "renovate-update-notification/Dockerfile"
      ],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "argocd": {
    "managerFilePatterns": [
      "/application\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/values\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["/\\.yml$"],
      "matchStrings": [
        "k3s_version:\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+\\+k3s[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k3s-io/k3s"
    },
    {
      "customType": "regex",
      "fileMatch": ["/\\.yml$"],
      "matchStrings": [
        "calico_tag:\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "projectcalico/calico"
    },
    {
      "customType": "regex",
      "fileMatch": ["/\\.yml$"],
      "matchStrings": [
        "cilium_tag:\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cilium/cilium"
    },
    {
      "customType": "regex",
      "fileMatch": ["/\\.yml$"],
      "matchStrings": [
        "kube_vip_tag_version:\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kube-vip/kube-vip"
    },
    {
      "customType": "regex",
      "fileMatch": ["/\\.yml$"],
      "matchStrings": [
        "metal_lb_(?:speaker|controller)_tag_version:\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "metallb/metallb"
    }
  ]
}
